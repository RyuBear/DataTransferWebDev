@model LogListVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Log", FormMethod.Post, new { Id = "IndexForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control", @type="date" })
            </div>
            <div class="col-md-1">
                －
            </div>
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control", @type = "date" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.DropDownListFor(x => x.Status, DropDownListMenu.StatusOption(Model.Status), new { @class = "form-control", @style = "font-weight:normal;" })
            </div>
            <div class="col-md-offset-1 col-md-2">
                <input type="submit" value="Query" class="btn btn-primary btn-block" />
            </div>
        </div>

        <div class="form-group">

        </div>

        <div class="form-group">
            <div class="col-md-12">
                @{
                    Html.RenderPartial("_LogRow", Model);
                }
            </div>
        </div>
    </div>
                    }
