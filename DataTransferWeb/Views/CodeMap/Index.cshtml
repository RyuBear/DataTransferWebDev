@model CodeMapListVM

@{
    ViewBag.Title = "代碼轉換查詢";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "CodeMap", FormMethod.Post, new { Id = "IndexForm" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-2 col-md-2">
                            @Html.LabelFor(x => x.CustomerName)
                        </div>
                        <div class="col-lg-2 col-md-2">
                            @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-2 col-md-2">
                            @Html.LabelFor(x => x.ModeType)
                        </div>
                        <div class="col-lg-2 col-md-2">
                            @Html.DropDownListFor(x => x.ModeType, DropDownListMenu.ModeTypeOption(), new { @class = "form-control" })
                        </div>
                        <div class="col-lg-2 col-md-2">
                            @Html.LabelFor(x => x.Format)
                        </div>
                        <div class="col-lg-2 col-md-2">
                            @Html.DropDownListFor(x => x.Format, DropDownListMenu.FormatOption(), new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-2 col-md-2">
                            @Html.LabelFor(x => x.SettingName)
                        </div>
                        <div class="col-lg-2 col-md-2">
                            @Html.TextBoxFor(x => x.SettingName, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-2 col-md-2">
                            @Html.LabelFor(x => x.FieldName)
                        </div>
                        <div class="col-lg-2 col-md-2">
                            @Html.TextBoxFor(x => x.FieldName, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-2 col-md-2">
                        </div>
                        <div class="col-lg-2 col-md-2">
                            <input id="btnSearch" name="btnSearch" type="submit" value="Search" class="btn btn-success btn-block" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-lg-9 col-md-9">
                            @Html.LabelFor(x => x.mapping)
                        </div>
                        <div class="col-lg-offset-1 col-md-offset-1 col-lg-2 col-md-2">
                            <p>
                                @Html.ActionLink("Create New", "Load", new { @class = "btn btn-success" })
                            </p>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="table-fix-head" id='table-cont'>
                            <table class="table table-striped table-bordered table-hover" id="dataTables">
                                <thead class="thead-inverse">
                                    <tr align="center">
                                        <th>Customer Name</th>
                                        <th>Mode Type</th>
                                        <th>Format</th>
                                        <th>XML/EXCEL Name</th>
                                        <th>TAG/Column Name</th>
                                        <th>Before Value</th>
                                        <th>After Value</th>
                                        <th>Modify By</th>
                                        <th>Modify Date</th>
                                        <th colspan="2"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.mapping)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CustomerName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ModeType)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Format)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SettingName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FieldName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.BeforeValue)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AfterValue)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Updator)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UpdateTime)
                                            </td>
                                            <td>
                                                <a href='@Url.Action("Load", new { ModeType = @item.ModeType, Format = @item.Format, SettingName = @item.SettingName, FieldName = @item.FieldName, BeforeValue = @item.BeforeValue })' class="btn btn-primary btn-block">Edit</a>
                                            </td>
                                            <td>
                                                <a href='@Url.Action("Delete", new { ModeType = @item.ModeType, Format = @item.Format, SettingName = @item.SettingName, FieldName = @item.FieldName, BeforeValue = @item.BeforeValue })' class="btn btn-primary btn-block">Delete</a>
                                                @*<a href='#' onclick="del('@item.CustomerName', '@item.ModeType','@item.Format','@item.SettingName','@item.FieldName','@item.BeforeValue');" class="btn btn-primary btn-block">Delete</a>*@
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
